<header id="header">
  <div class="container">
    <div class="header-flex">
      <div class="header-logo">
        <h3><%= link_to "ColorSend", root_path %></h3>
      </div>
      <div class="header-list">
        <ul class="row">
          <% if user_signed_in? %>
          <li class="col-xs-3"><%= link_to "", search_path, class: "glyphicon glyphicon-search" %></li>
          <li class="col-xs-3"><%= link_to "", notifications_path, class: "glyphicon glyphicon-bell" %></li>
          <li class="col-xs-3"><%= link_to "", current_user, class: "glyphicon glyphicon-user" %></li>
          <li class="col-xs-3"><%= link_to "", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out"  %></li>
          <% else %>
            <li><%= link_to "サインイン", user_facebook_omniauth_authorize_path %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</header>
