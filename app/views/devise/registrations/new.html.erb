<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render "devise/shared/error_messages", resource: f.object %>

      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-controll", value: @user.name %><br>

      <%= f.label :user_name %><br>
      <%= f.text_field :user_name, class: "form-controll", value: @user.user_name %><br>

      <%= f.label :password %><br>
      <%= f.password_field :password, class: "form-controll", value: @user.password %><br>

      <%= f.label :password_confirmation, "Confirmation" %><br>
      <%= f.password_field :password_confirmation, class: "form-controll", value: @user.password_confirmation %><br>

      <%= f.submit "Create my acount", class: "btn btn-primary mt-3" %><br>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
