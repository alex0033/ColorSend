<% user = comment.user %>
<div class="comment">
  <div class="separate">
    <div class="first">
      <%= image_tag user.image, class: "img-responsive img-circle user-image" %>
    </div>
    <div class="second">
      <strong class="user_user-name"><%= link_to user.user_name, user %></strong><br>
      <p class="content"><%= comment.content %></p>
    </div>
  </div>
  <% if current_user == user %>
    <div class="text-right">
      <%= link_to "", comment_path(comment), method: :delete, class: "glyphicon glyphicon-trash" %>
    </div>
  <% end %>
</div>
