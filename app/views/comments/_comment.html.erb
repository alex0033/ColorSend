<% user = comment.user %>
<div class="comment">
  <div class="separate">
    <div class="first">
        <%= image_tag user.image, class: "img-responsive img-circle" %>
    </div>
    <div class="second">
      <strong><%= link_to user.user_name, user %></strong><br>
      <%= comment.content %>
    </div>
  </div>
  <% if current_user == user %>
    <div class="text-right">
      <%= link_to "削除", "#" %>
    </div>
  <% end %>
</div>
