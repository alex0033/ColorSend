<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= image_tag @user.image, class: "img-responsive img-circle" %>
      <div class="user_text">
        <strong><%= link_to @user.user_name, @uesr %></strong><br>
        <span><b>Microposts:</b><%= @user.microposts.count%></span>
      </div>

    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars user_info">
          <% @users.each do |user| %>
            <%= link_to image_tag(user.image), user, class: "img-responsive img-circle" %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>
