<% provide(:title, @user.user_name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= image_tag @user.image %>
        <%= @user.user_name %>
      </h1>
      <h3>
        <%= @user.name %><br>
      </h3>
        <%= @user.self_introduction %><br>
        <%= @user.website %><br>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    登録情報の変更は<%= link_to "こちら", edit_user_registration_path %>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' %>
    <% if @microposts %>
      <% @which_micropost = "image_only_post" %>
      <h3>Microposts (<%= @microposts.count %>)</h3>
      <ul class="microposts">
        <%= render @microposts %>
      </ul>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
