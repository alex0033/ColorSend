<%= image_tag(micropost.user.image) %>
<span class="user">
  <%= link_to micropost.user.user_name, micropost.user %>
</span>
<span class="content">
  <%= image_tag micropost.display_image %>
</span>
<span>
  <%= render 'shared/like', micropost: micropost %>
  <!-- <i>ハート</i><%#= micropost.likes.count %> -->
  <!-- <i>コメント</i><%#= micropost.coments.count %> -->
</span>
<span class="timestamp">
  Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  <% if current_user == micropost.user %>
    <%= link_to "delete", micropost_path(micropost), method: :delete, data: { confirm: "本当に削除しますか？" } %>
  <% end %>
</span>
