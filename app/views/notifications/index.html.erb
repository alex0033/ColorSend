<% provide(title: "Notification") %>
<h3 class="text-center">通知</h3>
  <%= link_to all_destroy_notifications_path, method: :delete do %>
    <i class="glyphicon glyphicon-trash" style="color: black;"></i>
    <h7 style="color: black;">全削除</h7>
  <% end %>
  <hr>
<% if @notifications.exists? %>
  <ul class="notifications">
    <table class="table">
      <%= render @notifications %>
    </table>
  </ul>
<% else %>
  <p>通知はありません</p>
<% end %>
